{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]  // Make sure jest is here
  },
  "include": [
    "src/**/*.ts",  // Ensure all source files are included
    "tests/**/*.ts" // Make sure test files are included
  ]
}
